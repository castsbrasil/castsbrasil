<div class="login-header">
  <div class="header-cirle"></div>
</div>

<div class="container">
  <div class="row login-form-container">
    <div class="col-md-6 box-default-register">
      <h3>Login</h3>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <% if resource.errors.full_messages.any? %>
          <% resource.errors.full_messages.each do |error_message| %>
            <% if resource.errors.full_messages.first == error_message %>
              <div class="alert alert-danger">
                <%= error_message %>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <%= f.input_field :email , placeholder: 'Email', label: false %>
        <%= f.input_field :password, placeholder: 'Senha', label: false %>

        <% if devise_mapping.rememberable? %>
            <!-- <%= f.input :remember_me, as: :boolean %> -->
        <% end %>

        <%= f.button :submit, t('.sign_in', :default => "Sign in"), class: 'btn-primary login-submit pull-right' %>
      <% end %>
      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-md-6 box-social-register">
      <h3>Inscreva-se com sua conta no Github</h3>
       <%= link_to "Entrar com GitHub",user_omniauth_authorize_path("github"), class: "bt-github" %>
    </div>
  </div>
</div>
